<div class="main_title">
    Χρήστες
    <button class="new-user"><span class="material-symbols-outlined">add</span>Νέος χρήστης</button>
</div>
<table>
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.displayName}} ({{this.login}})</td>
                <td>{{this.email}}</td>
                <td class="actions-cell">
                    <div class="action-wrapper">
                        <button class="edit-action-btn">
                            <span class="material-symbols-outlined">edit</span>
                        </button>
                        <div class="action-menu hidden">
                            <button class="action-delete">
                                <span class="material-symbols-outlined">delete</span>Διαγραφή
                            </button>
                            <button class="action-edit">
                                <span class="material-symbols-outlined">edit_square</span>Επεξεργασία
                            </button>
                        </div>
                    </div>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<div id="overlay" class="overlay"></div>
<div id="editPopup" class="popup">
    <form id="userEdit" class="popup-content">
        <h2>Επεξεργασία στοιχείων</h2>
        <input type="text" id="username" name="username" placeholder="Όνομα Χρήστη" required />
        <input type="email" id="userEmail" name="userEmail" placeholder="Email" required />
        <button type="submit" class="btn">Αποθήκευση</button>
    </form>
</div>

<div id="newUserPopup" class="popup">
    <form id="newUser" class="popup-content">
        <h2>Νέος χρήστης</h2>
        <input type="text" id="username" name="username" placeholder="Όνομα Χρήστη" required />
        <input type="text" id="displayName" name="displayName" placeholder="Εμφανιζόμενο Όνομα" required />
        <input type="password" id="userPassword" name="userPassword" placeholder="Κωδικός" required />
        <input type="email" id="userEmail" name="userEmail" placeholder="Email" required />
        <button type="submit" class="btn">Εγγραφή</button>
    </form>
</div>