<div class="ticket-form-section">
    <div class="exhibition-selection" id="exhibitionSelection">
        <button class="exhibition-btn" data-type="permanent">
            <span>Μόνιμη Έκθεση</span>
        </button>
        <button class="exhibition-btn" data-type="temporary">
            <span>Προσωρινή Έκθεση</span>
        </button>
    </div>

    <div class="date-selection hidden" id="dateSelection">
        <label for="date">Επιλέξτε ημερομηνία</label>
        <input type="date" name="date" id="date" required>
        <div class="buttons">
            <button type="button" class="back-btn" id="backButton">
                <i class="fas fa-chevron-left"></i>
                Πίσω
            </button>
            <button type="button" class="next-btn" id="nextButton">
                Επόμενο
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>

    </div>

    <div class="ticket-counter-group hidden" id="ticketForm">
        <div class="counter-block">

            <div class="type">
                <div class="type-header">
                    <label for="adults">Ενήλικες</label>
                </div>
                <div class="counter">
                    <button type="button" class="decrement">−</button>
                    <input type="number" name="adults" id="adults" value="0" min="0" readonly>
                    <button type="button" class="increment">+</button>
                </div>
            </div>

            <div class="type">
                <div class="type-header">
                    <label for="children">Παιδιά</label>
                </div>
                <div class="counter">
                    <button type="button" class="decrement">−</button>
                    <input type="number" name="adults" id="adults" value="0" min="0" readonly>
                    <button type="button" class="increment">+</button>
                </div>
            </div>
        </div>

        <div class="counter-block">
            <div class="type">
                <div class="type-header">
                    <label for="students">Μαθητές</label>
                </div>
                <div class="counter">
                    <button type="button" class="decrement">−</button>
                    <input type="number" name="adults" id="adults" value="0" min="0" readonly>
                    <button type="button" class="increment">+</button>
                </div>
            </div>

            <div class="type">
                <div class="type-header">
                    <label for="audioguides">Audioguides</label>
                </div>
                <div class="counter">
                    <button type="button" class="decrement">−</button>
                    <input type="number" name="adults" id="adults" value="0" min="0" readonly>
                    <button type="button" class="increment">+</button>
                </div>
            </div>
        </div>
        <div class="buttons hidden" id="ticketFormButtons">
            <button type="button" class="back-btn-search" id="backButtonSearch">
                <i class="fas fa-chevron-left"></i>
                Πίσω
            </button>
            <button type="submit" class="searchBtn" id="searchBtn">Search</button>
        </div>
    </div>
</div>

<div class="ticket-list hidden" id="ticketList">
    <table class="ticket-results">
        <thead>
            <tr>
                <td colspan="6">
                    <div class="table-header">
                        <div>Cagegory</div>
                        <div>Time</div>
                        <div>Duration</div>
                        <div>Number of tickets</div>
                        <div>Total</div>
                        <div></div>
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="6">
                    <div class="ticket-card" id="ticketCard">
                        <div class="category">Μόνιμη Έκθεση</div>
                        <div class="time-info">
                            <div class="time-start">11:30</div>
                            <span>→</span>
                            <div class="time-end">12:30</div>
                        </div>
                        <div class="duration">⏱️ 1 ώ 00 λ</div>
                        <div class="number-of-tickets">👤 3</div>
                        <div class="price"><strong>30 €</strong></div>
                        <div class="selection">
                            <input type="checkbox" class="checkbox" />
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>


</div>