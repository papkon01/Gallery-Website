<div class="login-container">
    {{#if success}}
        <div style="color: green; font-weight: bold">
            {{success}}
        </div>
    {{/if}}
    <h2>Σύνδεση</h2>
    <form method="post" action="/login">
        <div class="input-group">
            <i class="fas fa-user icon"></i>
            <input type="text" name="username" placeholder="Όνομα Χρήστη">
        </div>
        <div class="input-group">
            <i class="fas fa-lock icon"></i>
            <input type="password" name="passwd" placeholder="Συνθηματικό" id="passwordInput">
            <button type="button" class="toggle-password" tabindex="-1" onclick="togglePassword()">
                <i class="fas fa-eye" id="togglePasswordIcon"></i>
            </button>
        </div>
        {{#if error}}
            <div style="color: red; font-weight: bold">
                {{error}}
            </div>
        {{/if}}
        <button type="submit">Σύνδεση</button>
        <div class="forgot-password">
            <a href="/password-reset">Ξεχάσατε τον κωδικό;</a>
        </div>
    </form>
</div>
